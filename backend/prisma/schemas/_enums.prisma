// System enumerations for the LMS platform

// System user role enumeration
enum SystemUserRole {
  SUPERADMIN   @map("1")  // Global system administrator (no tenant)
  TENANT_ADMIN @map("2")  // Tenant administrator
}

// System user status enumeration
enum SystemUserStatus {
  ACTIVE    @map("1")
  INACTIVE  @map("2")
  SUSPENDED @map("3")
  LOCKED    @map("4")
}

