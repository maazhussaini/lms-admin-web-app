                    "listen": "prerequest",
                    "script": {
                        "exec": [
                            "// Use existing email if available, otherwise use a default",
                            "if (!pm.environment.get('student_email')) {",
                            "    pm.environment.set('student_email', 'student1@example.com');",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
