{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (via npm run dev:debug)",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev:debug"
      ],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json"
      }
    }
  ]
}
